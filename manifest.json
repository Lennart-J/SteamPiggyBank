{
  "manifest_version": 2,
  "name": "Steam Piggy Bank",
  "short_name": "SPB",
  "version": "0.37",
  "description": "Get a quick overview of Steam's current sales",
  "icons": {
      "128": "img/Icon128x128coinlessAndBig.png",
      "16": "img/Icon16x16coinless.png",
      "48": "img/Icon48x48coinless.png"
   },
  "background": {
    "scripts": ["scripts/jquery-2.1.1.min.js", "scripts/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "img/Icon19x19coinless.png",
      "38": "img/Icon38x38coinless.png"
    },
    "default_title": "Steam Piggy Bank",
    "default_popup": "popup.html"
  },
  "author": "Lennart Jarms, Janina Huether",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": ["storage", "http://store.steampowered.com/*", "http://api.steampowered.com/*"],
  "web_accessible_resources": ["images/*.png"]
}