{
    "manifest_version": 2,
    "name": "Steam Sale Catcher",
    "version": "0.35",
    "description": "Get a quick overview of Steam's current sales",
    "background": {
        "scripts": ["scripts/jquery-2.1.1.min.js", "scripts/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Steam Sale Catcher",
        "default_popup": "popup.html"
    },
    "author": "Lennart Jarms",
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "permissions": ["storage", "http://store.steampowered.com/*", "http://api.steampowered.com/*"],
    "web_accessible_resources": [""]
}